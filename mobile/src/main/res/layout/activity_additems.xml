<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".additems">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">


            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="@android:color/white"
                android:paddingTop="15dp"
                android:scaleType="fitCenter"
                android:text="prev"
                app:srcCompat="@drawable/baseline_keyboard_backspace_black_48dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserratbold"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:paddingTop="15dp"
                android:text="@string/add_items"
                android:textColor="#5d5d5d"
                android:textSize="20sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="390dp"
            android:layout_height="600dp"
            android:paddingLeft="20dp"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserratmedium"
                android:paddingTop="20dp"
                android:text=" Item category"
                android:textColor="#5d5d5d"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserratmedium"
                android:paddingLeft="265dp"
                android:paddingTop="20dp"
                android:text=" Amount"
                android:textColor="#5d5d5d"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="260dp"
                android:layout_height="42dp"
                android:layout_above="@+id/itemname"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="-90dp"
                android:paddingLeft="20dp"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserratmedium"
                android:paddingTop="100dp"
                android:text=" Name"
                android:textColor="#5d5d5d"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edittext"
                android:layout_width="105dp"
                android:layout_height="42dp"
                android:layout_alignBottom="@+id/itemname"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="81dp"
                android:ems="10"
                android:fontFamily="@font/montserratsemibold"
                android:gravity="right"
                android:inputType="numberDecimal"
                android:text="1"
                android:textColor="#9d9d9d" />


            <EditText
                android:id="@+id/itemname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="123dp"
                android:layout_marginEnd="0dp"
                android:ems="10"
                android:fontFamily="@font/montserratsemibold"
                android:text="Name"
                android:textColor="#9d9d9d" />
.

            <Button
                android:id="@+id/button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="462dp"
                android:layout_marginEnd="126dp"
                android:background="@drawable/button_shape"
                android:elevation="2dp"
                android:fontFamily="@font/montserratsemibold"
                android:text="Add"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageView"
                android:paddingTop="40dp"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:src="@drawable/header" />

        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
