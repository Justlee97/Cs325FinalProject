<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".glass">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white"
        android:gravity="top"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserratbold"
                android:gravity="center"
                android:paddingTop="15dp"
                android:text="Glass"
                android:textColor="#5d5d5d"
                android:textSize="20sp"/>

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="@android:color/white"
                android:paddingTop="15dp"
                android:scaleType="fitCenter"
                android:text="prev"
                app:srcCompat="@drawable/baseline_keyboard_backspace_black_48dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserratbold"
            android:letterSpacing="0.15"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:text="GUIDE"
            android:textColor="#9d9d9d"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserratbold"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:text="Overview"
            android:textColor="#5d5d5d"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserratmedium"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:text="Most household glass can be recycled over and over again; just rinse or wash out the container and recycle. Glass is one of the easiest materials to recycle, so buy products packaged in glass if you can."
            android:textColor="#6a6a6a"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserratmedium"
            android:paddingLeft="40dp"
            android:paddingTop="15dp"
            android:text="Recycle:"
            android:textColor="#5d5d5d"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserratregular"
            android:paddingLeft="40dp"
            android:paddingTop="5dp"
            android:text="- Food containers/Jars"
            android:textColor="#6a6a6a"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserratregular"
            android:paddingLeft="40dp"
            android:text="- Soft drinks/beer bottles"
            android:textColor="#6a6a6a"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserratregular"
            android:paddingLeft="40dp"
            android:text="- Wine and liquor bottles"
            android:textColor="#6a6a6a"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserratmedium"
            android:paddingLeft="40dp"
            android:paddingTop="10dp"
            android:text="Do not recycle:"
            android:textColor="#5d5d5d"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserratregular"
            android:paddingLeft="40dp"
            android:paddingTop="5dp"
            android:text="- Light bulbs"
            android:textColor="#6a6a6a"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserratregular"
            android:paddingLeft="40dp"
            android:text="- Cooking dishes"
            android:textColor="#6a6a6a"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserratregular"
            android:paddingLeft="40dp"
            android:text="- Broken or sharp glass"
            android:textColor="#6a6a6a"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserratregular"
            android:paddingLeft="40dp"
            android:text="- Car windshield"
            android:textColor="#6a6a6a"
            android:textSize="17sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>