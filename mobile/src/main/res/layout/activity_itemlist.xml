<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".itemlist">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


    </android.support.design.widget.AppBarLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white"
        android:gravity="top"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="@android:color/white"
                android:paddingTop="15dp"
                android:scaleType="fitCenter"
                android:text="prev"
                app:srcCompat="@drawable/baseline_keyboard_backspace_black_48dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserratbold"
                android:gravity="center"
                android:paddingTop="15dp"
                android:text="@string/item_list"
                android:textColor="#5d5d5d"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserratsemibold"
                android:letterSpacing="0.15"
                android:paddingLeft="25dp"
                android:paddingTop="80dp"
                android:text="@string/most_popular"
                android:textColor="#9d9d9d"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserratsemibold"
                android:letterSpacing="0.15"
                android:paddingLeft="25dp"
                android:paddingTop="205dp"
                android:text="@string/current_items"
                android:textColor="#9d9d9d"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <carbon.widget.Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#41d9cc"
        app:carbon_cornerRadius="6dp"
        app:carbon_elevation="2dp"
        app:carbon_elevationAmbientShadowColor="#e5eae7"
        app:carbon_elevationShadowColor="#e5eae7"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintHorizontal_bias="0.782"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.749" />

    <carbon.widget.Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#82e6ae"
        app:carbon_cornerRadius="6dp"
        app:carbon_elevation="2dp"
        app:carbon_elevationAmbientShadowColor="#e5eae7"
        app:carbon_elevationShadowColor="#e5eae7"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintHorizontal_bias="0.596"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.749" />

    <carbon.widget.Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#fbdd7f"
        app:carbon_cornerRadius="6dp"
        app:carbon_elevation="2dp"
        app:carbon_elevationAmbientShadowColor="#e5eae7"
        app:carbon_elevationShadowColor="#e5eae7"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.749" />

    <carbon.widget.Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#65a4ed"
        app:carbon_cornerRadius="6dp"
        app:carbon_elevation="2dp"
        app:carbon_elevationAmbientShadowColor="#e5eae7"
        app:carbon_elevationShadowColor="#e5eae7"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintHorizontal_bias="0.221"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.749" />

    <carbon.widget.Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#fbdd7f"
        app:carbon_cornerRadius="6dp"
        app:carbon_elevation="2dp"
        app:carbon_elevationAmbientShadowColor="#e5eae7"
        app:carbon_elevationShadowColor="#e5eae7"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.749" />

    <carbon.widget.ImageView
        android:layout_width="360dp"
        android:layout_height="300dp"
        android:background="#fff"
        app:carbon_cornerRadius="6dp"
        app:carbon_elevation="9dp"
        app:carbon_elevationAmbientShadowColor="#e5eae7"
        app:carbon_elevationShadowColor="#e5eae7"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.439" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:fontFamily="@font/montserratsemibold"
        android:letterSpacing="0.15"
        android:paddingLeft="25dp"
        android:paddingTop="580dp"
        android:text="@string/daily_total"
        android:textColor="#9d9d9d"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:fontFamily="@font/montserratsemibold"
        android:letterSpacing="0.15"
        android:paddingLeft="170dp"
        android:paddingTop="580dp"
        android:text="@string/grand_total"
        android:textColor="#9d9d9d"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fontFamily="@font/montserratbold"
        android:paddingLeft="30dp"
        android:paddingTop="600dp"
        android:text="@string/amount"
        android:textColor="#5d5d5d"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fontFamily="@font/montserratbold"
        android:paddingLeft="170dp"
        android:paddingTop="600dp"
        android:text="@string/target_amount"
        android:textColor="#5d5d5d"
        android:textSize="23sp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="0dp" />

    <carbon.widget.FloatingActionButton
        android:id="@+id/plus_button"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/carbon_padding"
        android:background="@drawable/plusbutton"
        android:src="@drawable/baseline_close_black_18dp"
        android:text="Rounded with ripple"
        app:carbon_anchorGravity="top"
        app:carbon_cornerRadius="28dp"
        app:carbon_elevation="8dp"
        app:carbon_elevationAmbientShadowColor="#e5eae7"
        app:carbon_elevationShadowColor="#e5eae7"
        app:carbon_rippleColor="#3ad0a7"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.221"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.12" />


</android.support.constraint.ConstraintLayout>
