<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

    <carbon.widget.TextView
        android:id="@+id/carbon_bottomSheetTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/carbon_toolbarHeight"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="@dimen/carbon_windowPadding"
        android:paddingRight="@dimen/carbon_windowPadding"
        android:textAppearance="?attr/carbon_textAppearanceTitle"
        android:visibility="gone"/>

    <carbon.widget.RecyclerView
        android:id="@+id/carbon_bottomSheetRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</merge>